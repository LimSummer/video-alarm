/* pages/main/authoer-list.wxss */
.userinfo {
  display: flex;
  flex-direction: row;
  align-items: left;
  justify-content: flex-start;
}

.userinfo-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  margin: 5px;
  color: #aaa;
}

.platform {
  display: flex;
  flex-direction: column;
}
.flex-item {
  width: 100%;
  height: 100%;
  margin: 1px;
  justify-content: center;
}
.header {
  display: flex;
  justify-content: center;
  align-items: center;
}

.list-body {
  display: flex;
  flex-wrap: wrap;
  /* justify-content: center; */
}
.account-item {
  flex-direction: column;
  width: 20%;
  height: 140px;
  margin: 5px;
}

.img-c1 {
  width: 100%;
  height: 80px;
  border-radius: 50%
}

.account-name {
  text-align: center;
  font-size: 80%;
}